<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="estate_property_view_list" model="ir.ui.view">
        <field name="name">estate.property.list</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <list string="Properties"
                decoration-success="state in ['offer_received', 'offer_accepted']"
                decoration-bf="state == 'offer_accepted'" decoration-muted="state == 'sold'">
                <field name="name" string="Title" />
                <field name="postcode" />
                <field name="bedrooms" />
                <field name="living_area" string="Living area (sqm)" />
                <field name="expected_price" />
                <field name="selling_price" />
                <field name="date_availability" string="Available from" optional="hide" />
            </list>
        </field>
    </record>

    <record id="estate_property_view_kanban" model="ir.ui.view">
        <field name="name">estate.property.kanban</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <kanban default_group_by="property_type_id" records_draggable="0">
                <field name="state" />
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_global_click">
                            <div>
                                <strong class="o_kanban_record_title">
                                    <field name="name" />
                                </strong>
                            </div>

                            <div> Expected Price: <field name="expected_price" />
                            </div>

                            <div t-if="record.state.raw_value == 'offer_received'"> Best Offer: <field
                                    name="best_price" />
                            </div>

                            <field name="property_tags_ids"
                                widget="many2many_tags"
                                options="{'color_field': 'color'}" />
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">

            <form string="new_property_form">
                <header>
                    <button
                        name="action_sold_property"
                        type="object"
                        string="Sold"
                        invisible="state in ['sold', 'canceled']"
                    />
                    <button
                        name="action_cancel_property"
                        type="object"
                        string="Canceled"
                        invisible="state in ['sold', 'canceled']"
                    />
                    <field name="state" widget="statusbar"
                        statusbar_visible="new,offer_received,offer_accepted,sold" />
                </header>
                <sheet>
                    <group style="display: flex; flex-direction: column;">
                        <h1>
                            <field name="name" string="Title" />
                        </h1>
                        <field name="property_tags_ids" widget="many2many_tags"
                            options="{'color_field': 'color'}" />
                    </group>
                    <hr />
                    <group>
                        <group>
                            <field name="state" string="Status" />
                            <field name="postcode" />
                            <field name="date_availability" string="Available from" />
                            <field name="property_type_id" string="Property type"
                                options="{'no_create': true, 'can_write':False}" />
                        </group>
                        <group>
                            <field name="expected_price" />
                            <field name="best_price" string="Best price" readonly="True" />
                            <field name="selling_price" readonly="True" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description" />
                                <field name="bedrooms" />
                                <field name="living_area" string="Living area (sqm)" />
                                <field name="facades" />
                                <field name="garage" />
                                <field name="garden" />
                                <field
                                    name="garden_area"
                                    string="Garden area (sqm)"
                                    invisible="garden == False"
                                />
                                <field
                                    name="garden_orientation"
                                    invisible="garden == False"
                                />
                                <field name="total_area" string="Total area (sqm)" readonly="True" />
                            </group>
                        </page>
                        <page string="Offers">
                            <group>
                                <field name="offer_ids" widget="one2many_list"
                                    readonly="state in ['offer_accepted', 'sold', 'canceled']" />
                            </group>
                        </page>
                        <page string="Other info">
                            <group>
                                <field name="seller_id" string="Salesman" />
                                <field name="buyer_id" string="Buyer" />
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_property_model_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Search properties">
                <field name="name" string="Title" />
                <field name="property_type_id" string="Property type" />
                <field name="postcode" />
                <field name="expected_price" />
                <field name="bedrooms" />
                <field name="living_area" string="Living area (sqm)"
                    filter_domain="[('living_area','>=',self)]" />
                <field name="facades" />

                <filter string="Available" name="available"
                    domain="[('name', 'ilike', 'Available')]"
                    context="{'search_default_available': True, 'search_default_current': True}" />


                <filter string="New or Offer Received" name="new_or_offer_received"
                    domain="[('state', 'in', ['new', 'offer_received'])]" />
                <filter string="Group by postcode" name="group_by_postcode"
                    context="{'group_by': 'postcode'}" />

            </search>
        </field>
    </record>

</odoo>